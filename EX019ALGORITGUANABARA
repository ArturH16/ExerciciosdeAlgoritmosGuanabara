nome = input('Digite seu nome: ')
nota1 = float(input('Digite sua primeira nota: '))
nota2  = float(input('Digite sua segunda nota: '))
media = (nota1 + nota2) / 2
if media > 7:
  print(f'MÉDIA DE {nome}: {media:.2f}\nACIMA DA MÉDIA! PARABÉNS')
elif media == 7:
  print(f'MÉDIA DE {nome}: {media:.2f}\nDENTRO DA MÉDIA!')
else:
  print(f'MÉDIA DE {nome}: {media:.2f}\nABAIXO DA MÉDIA! SE ESFORÇE MAIS')
